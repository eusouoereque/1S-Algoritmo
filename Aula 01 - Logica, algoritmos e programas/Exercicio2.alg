algoritmo "semnome"
// Função :
// Autor :
// Data : 27/02/2023
// Seção de Declarações 
var
n1, n2, n3, media : real
inicio
// Seção de Comandos 

escreva("Digite a primeira nota (70%)")
leia(n1)
escreva("Digite a segunda nota (20%)")
leia(n2)
escreva("Digite a terceira nota (10%)")
leia(n3)

media <- (n1 * 0.7) + (n2 * 0.2) + (n3 * 0.1)

escreva("A média é: ",media)

fimalgoritmo
